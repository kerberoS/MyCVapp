%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title MyCVapp
    %link{:charset => "utf-8", :href => "/css/global.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %script{:charset => "utf-8", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/js/validate.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/js/application.js", :type => "text/javascript"}
    :javascript
          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', 'UA-5917265-20']);
          _gaq.push(['_trackPageview']);

          (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();
  %body
    #header
      %h2#mycvapp_counter
        we created
        %strong 5,875,214
        resumes today
      %h1#logo
        %a{:href => "/", :title => ""} MyCVapp
    / /header
    #login.join
      %h2
        Login in to
        = succeed "app" do
          %strong mycv
      %p
        You don't have an account?
        %a{:href => "/signup", :title => "Sign Up" } Get one in 5 seconds!
      %form{"accept-charset" => "utf-8", :action => "/login", :method => "post"}
        %fieldset
          %p.first
            %label{:for => "username"} Username
            %span
              %input#username{:name => "username", :type => "text", :value => ""}/
          %p
            %label{:for => "password"} Password
            %span
              %input#password{:name => "password", :type => "password", :value => ""}/
              %a{:href => "/reset-password"} Forgot your password?
          %p.last
            %small
              %input#remember{:name => "remember", :type => "checkbox"}/
              %label{:for => "remember"} Remember me on this computer
            %button{:type => "submit"} Login
    / /login
    #footer
      %ul
        %li
          %strong Get in touch:
          %a{:href => "mailto:hi@mycvapp.com", :title => "Get In Touch"} hi@mycvapp.com
          \/
          %a{:href => "http://www.twitter.com/mycvapp", :title => "Follow us on Twitter!"} @mycvapp
        %li
          %strong Get Started:
          %a{:href => "/signup", :title => "Sign Up"} Sign Up
          \/
          %a{:href => "/login", :title => "Login"} Log In
        %li
          Copyright Â© 2010 mycvapp - All Rights Reserved. Hosted by
          %a{:href => "http://www.heroku.com", :title => "Hosted by Heroku"} Heroku
    / /footer