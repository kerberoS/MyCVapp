!!! Strict
%html{:lang => "en", "xml:lang" => "en", :xmlns => "http://www.w3.org/1999/xhtml"}
  %head
    %meta{:content => "text/html; charset=utf-8", "http-equiv" => "Content-Type"}/
    %title MyCVapp: #{params[:username]}'s Profile
    %link{:charset => "utf-8", :href => "/css/global.css", :media => "screen", :rel => "stylesheet", :type => "text/css"}/
    %script{:charset => "utf-8", :src => "http://ajax.googleapis.com/ajax/libs/jquery/1.4.2/jquery.min.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/js/highcharts.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/js/stats.js", :type => "text/javascript"}
    %script{:charset => "utf-8", :src => "/js/application.js", :type => "text/javascript"}
    :javascript
          var _gaq = _gaq || [];
          _gaq.push(['_setAccount', 'UA-5917265-20']);
          _gaq.push(['_trackPageview']);

          (function() {
            var ga = document.createElement('script'); ga.type = 'text/javascript'; ga.async = true;
            ga.src = ('https:' == document.location.protocol ? 'https://ssl' : 'http://www') + '.google-analytics.com/ga.js';
            var s = document.getElementsByTagName('script')[0]; s.parentNode.insertBefore(ga, s);
          })();
  %body
    #header
      %ul#navigation
        %li 
          Welcome back 
          %strong #{@user.username}
        %li
          %a{:href => "/user/#{params[:id]}"} My Profile
        %li
          %a{:href => "/user/#{params[:id]}/settings"} Settings
        %li
          %a{:href => "/logout"} Logout
      %h1#logo
        %a{:href => "/", :title => ""} MyCVapp
    / /header
    #container
      #profile_header
        #profile_image
          %img{:alt => "diego_ar", :src => "http://a1.twimg.com/profile_images/1121793305/IMG_0834_reasonably_small.jpg", :width => '80'}
        / /profile_image
        #profile_details
          %h4 #{@user.username}
          %p
            %strong #{@user.fullname}
            , 20, #{@user.gender}, #{@user.country}
          %p
            %a{:href => "#{@user.website}"} #{@user.website}
          %p
            %a.twitter{:href => "http://www.twitter.com/#{@user.twitter_username}"} #{@user.twitter_username}
            %a.facebook{:href => "http://www.facebook.com/#{@user.facebook_username}"} #{@user.facebook_username}
        / /profile_details
      / /profile_header
      #user_profile
        %h2 Your resumes
        %p.info
          You don't have any resume to display yet. Do you want to create one? 
          %a{:href => "/resume/#{params[:username]}/new", :title => ""} Click here
        %h2 Your profile visits
        #stats
    #footer
      %ul
        %li
          %strong Get in touch:
          %a{:href => "mailto:hi@mycvapp.com", :title => "Get In Touch"} hi@mycvapp.com
          \/
          %a{:href => "http://www.twitter.com/mycvapp", :title => "Follow us on Twitter!"} @mycvapp
        %li
          %strong Get Started:
          %a{:href => "/signup", :title => "Sign Up"} Sign Up
          \/
          %a{:href => "/login", :title => "Login"} Log In
        %li
          Copyright Â© 2010 mycvapp - All Rights Reserved. Hosted by
          %a{:href => "http://www.heroku.com", :title => "Hosted by Heroku"} Heroku
    / /footer